extends layout 

block content 
  h1 Update Book 
  form(action="/books/" + book.id, method="POST")
    p 
      label(for="title") Title 
      input(name="title" type="text" id="title" value=book.title) 
    p 
      label(for="author") Author 
      input(name="author" type="text" id="author" value=book.author) 
    p 
      label(for="genre") Genre 
      input(name="genre" type="text" id="genre" value=book.genre) 
    p 
      label(for="year") Year 
      input(name="year" type="text" id="year" value=book.year) 
    p
      input(class="button" type="submit" value="Update Book")
  form(action="/books/" + book.id, method="POST", onsubmit="return confirm('Do you really want to delete this book?');")
    p 
      input(class="button" type="submit" value="Delete Book")
  p 
    a(class="button" href="/") Cancel 