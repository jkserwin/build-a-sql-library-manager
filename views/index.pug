extends layout

block content
  h1 Books
  p 
    a(class='button' id='newbook' href='/books/new') Create New Book
  table 
    tr
      th Title
      th Author
      th Genre
      th Year
    each book in books 
      tr
        td
          a(class='title' href=`/books/${book.id}`)= book.title 
        td= book.author
        td= book.genre
        td= book.year
    
